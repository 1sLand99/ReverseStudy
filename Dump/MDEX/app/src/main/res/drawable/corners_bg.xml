<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <!-- 灰色阴影 -->
    <layer-list>
        <item
            android:left="2dp"
            android:top="2dp">
            <shape>
                <solid android:color="@color/shadow" />
                <corners android:radius="15dp" />
            </shape>
        </item>
        <!-- 白色前景 -->
        <item
            android:bottom="2dp"
            android:right="2dp">
            <shape>
                <solid android:color="@color/mycard" />
                <corners android:radius="15dp" />
            </shape>
        </item>
    </layer-list>
</item>
</selector>